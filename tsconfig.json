{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts",
        "common/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts"
    ]
}